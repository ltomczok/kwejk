              %input#search-field.blink.search-field{:name => "search field", :title => "Enter search here", :type => "text", :value => "Enter search here"}/
              %input.search-button{:type => "submit", :value => "GO!"}/
        / end Sub-Menu
      / end Header
      / Main
      #main
        = yield
        / NEWS
        #news
          .head
            %h3 NEWS
            %p.text-right
