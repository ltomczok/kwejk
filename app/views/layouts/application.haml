  %body
    / Shell
    #shell
      / Header
      #header
        %h1#logo
          %a{:href => "#"} Movie Hunter
        .social
          %span FOLLOW US ON:
          %ul
            %li
              %a.twitter{:href => "#"} twitter
            %li
              %a.facebook{:href => "#"} facebook
            %li
              %a.vimeo{:href => "#"} vimeo
            %li
              %a.rss{:href => "#"} rss
        / Navigation
        #navigation
          %ul
            %li
              %a.active{:href => "#"} HOME
            %li
              %a{:href => "#"} NEWS
            %li
              %a{:href => "#"} IN THEATERS
            %li
              %a{:href => "#"} COMING SOON
            %li
              %a{:href => "#"} CONTACT
            %li
              %a{:href => "#"} ADVERTISE
        / end Navigation
        / Sub-menu
        #sub-navigation
          %ul
            %li
              %a{:href => "#"} SHOW ALL
            %li
              %a{:href => "#"} LATEST TRAILERS
            %li
              %a{:href => "#"} TOP RATED
            %li
              %a{:href => "#"} MOST COMMENTED
